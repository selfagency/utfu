  "license": "MIT",
  "author": "Daniel Sieradski <daniel@self.agency>",
  "type": "module",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --out-dir dist",
    "postbuild": "node ./scripts/write-dist-package.js",
    "prepare": "npm run build",
    "test": "vitest"
  },
  "devDependencies": {
    "@types/he": "^1.2.3",
    "@types/node": "^25.3.0",
    "esbuild": "^0.27.3",
    "he": "^1.2.0",
    "oxfmt": "^0.34.0",
    "oxlint": "^1.49.0",
    "oxlint-tsgolint": "^0.14.2",
    "tsup": "8.5.1",
